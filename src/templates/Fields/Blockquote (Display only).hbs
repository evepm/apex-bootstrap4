{{#before_label_and_item}}
<blockquote class="blockquote #ITEM_CSS_CLASSES#">
{{/before_label_and_item}}
    {{#before_label}}
    <label for="#CURRENT_ITEM_NAME#" id="#LABEL_ID#" class="hidden-xs-up">
    {{/before_label}}
    {{#after_label}}
    </label>
    {{/after_label}}
    {{#before_item}}
    <p class="m-b-0">
    {{/before_item}}
    {{#after_item}}
    </p>
    {{/after_item}}
{{#after_label_and_item}}
<footer class="blockquote-footer">#CURRENT_ITEM_HELP_TEXT#</footer>
</blockquote>
{{/after_label_and_item}}

{{#on_error_before_label}}{{/on_error_before_label}}
{{#on_error_after_label}}{{/on_error_after_label}}
{{#error_template}}{{/error_template}}
{{#help_template}}{{/help_template}}
